{
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": "./",
    "rootDir": "./",
    "composite": true,
    "outDir": "./../build",
    "incremental": true,
    "lib": [
      "ES2022"
    ],
    "strict": true,
    "types": ["node", "mocha"],
    "skipLibCheck": true,
    "noImplicitOverride": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "**/*.ts"
  ]
}
